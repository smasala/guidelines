{
    "compileOnSave": false,
    "compilerOptions": {

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "fullTemplateTypeCheck": true,      
        "strictInjectionParameters": true,

        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": [
        "node_modules/@types"
        ],
        "lib": [
        "es2016",
        "dom"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}  